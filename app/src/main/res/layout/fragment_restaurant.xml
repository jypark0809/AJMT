            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="치킨"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/toggle_btn7"
            app:layout_constraintStart_toStartOf="@+id/toggle_btn7"
            app:layout_constraintTop_toBottomOf="@id/toggle_btn7" />

        <ToggleButton
            android:id="@+id/toggle_btn8"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:background="@drawable/selector_btn_8"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toggle_btn7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
