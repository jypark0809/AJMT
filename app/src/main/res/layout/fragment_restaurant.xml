    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="음식 종류를 골라주세요"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="(중복 선택 가능)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout">

        <ToggleButton
            android:id="@+id/toggle_btn1"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:background="@drawable/selector_btn_1"
            android:textOff=""
            android:textOn=""
            android:checked="true"
            app:layout_constraintEnd_toStartOf="@+id/toggle_btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="전체"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/toggle_btn1"
            app:layout_constraintStart_toStartOf="@+id/toggle_btn1"
            app:layout_constraintTop_toBottomOf="@id/toggle_btn1" />

        <ToggleButton
            android:id="@+id/toggle_btn2"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:background="@drawable/selector_btn_2"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toStartOf="@+id/toggle_btn3"
            app:layout_constraintStart_toEndOf="@id/toggle_btn1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="한식"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/toggle_btn2"
            app:layout_constraintStart_toStartOf="@+id/toggle_btn2"
            app:layout_constraintTop_toBottomOf="@id/toggle_btn2" />

        <ToggleButton
            android:id="@+id/toggle_btn3"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:background="@drawable/selector_btn_3"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toStartOf="@+id/toggle_btn4"
            app:layout_constraintStart_toEndOf="@id/toggle_btn2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="분식"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/toggle_btn3"
            app:layout_constraintStart_toStartOf="@+id/toggle_btn3"
            app:layout_constraintTop_toBottomOf="@id/toggle_btn3" />

        <ToggleButton
            android:id="@+id/toggle_btn4"
            android:layout_width="57dp"
            android:layout_height="57dp"
