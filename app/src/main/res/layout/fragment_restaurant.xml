            android:layout_width="57dp"
            android:layout_height="57dp"
            android:background="@drawable/selector_btn_5"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toStartOf="@+id/toggle_btn6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="중국집"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/toggle_btn5"
            app:layout_constraintStart_toStartOf="@+id/toggle_btn5"
            app:layout_constraintTop_toBottomOf="@id/toggle_btn5" />

